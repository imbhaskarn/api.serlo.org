{
  "extends": "./tsconfig.prod.json",
  "module": "ESNext",
  "ts-node": {
    "moduleTypes": {
      "packages/server/scripts/deploy.ts": "esm",
      "scripts/changelog.ts": "esm",
      "scripts/license-headers.ts": "esm",
      "scripts/publish-pacts.ts": "esm"
    }
  },
  "compilerOptions": {
    "importHelpers": false,
    "baseUrl": "./packages",
    "target": "es2019",
    "paths": {
      "@serlo/api": ["types/src"],
      "@serlo/authorization": ["authorization/src"],
      "~/*": ["server/src/*"]
    }
  }
}
